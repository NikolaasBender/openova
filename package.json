{
  "name": "openova",
  "version": "1.0.0",
  "description": "A lightweight VS Code clone built with Electron and Monaco Editor.",
  "main": "dist-electron/main.js",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "dev": "concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist-electron/main.js && npx electron . --no-sandbox",
    "build": "tsc -p tsconfig.main.json && vite build",
    "build:linux": "npm run build && electron-builder --linux deb",
    "build:mac": "npm run build && electron-builder --mac dmg",
    "release": "npm run build && electron-builder --linux deb --mac dmg"
  },
  "build": {
    "appId": "com.openova.app",
    "productName": "OpenOva",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": "deb",
      "category": "Development"
    },
    "mac": {
      "target": "dmg"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NikolaasBender",
        "repo": "openova"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NikolaasBender/openova.git"
  },
  "keywords": [],
  "author": "OpenOva Team <team@openova.app>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NikolaasBender/openova/issues"
  },
  "homepage": "https://github.com/NikolaasBender/openova#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}